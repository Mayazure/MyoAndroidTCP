<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.mayazure.myodrivingtool.MainActivity"
    android:keepScreenOn="true">

    <EditText
        android:id="@+id/InputIP"
        android:layout_width="1000px"
        android:layout_height="wrap_content"
        android:hint="IP address here"
        android:text="192.168.2.3"
        android:textSize="100px"
        android:layout_margin="60px"
        android:maxLines="1"
        android:inputType="text"/>

    <EditText
        android:id="@+id/InputPort"
        android:layout_width="1000px"
        android:layout_height="wrap_content"
        android:hint="Port here"
        android:text="9020"
        android:textSize="100px"
        android:layout_margin="60px"
        android:inputType="number"
        android:maxLines="1" />

    <Button
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:layout_margin="0px"
        android:textSize="60px"
        android:text="Connect"
        android:textAllCaps="false"
        android:onClick="connect"/>

</LinearLayout>
